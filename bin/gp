#!/bin/bash

PROG="${0##*/}"
SCRIPTS="${0%/*/*}"
HELP="
$PROG - shorcut for 'git pull' for current branch

Usage:
  $PROG
"

source ${SCRIPTS}/lib/_common.sh

p1=${1}

if [ -n "$p1" ]; then
    show_help
fi

branch="`git rev-parse --abbrev-ref HEAD`"

if [ -z "$branch" ]; then
    error_and_help "can't get current git branch!"
fi


run_cmd "git status" "Current status"

show_msg ""

run_cmd "git pull origin ${branch}:${branch}" "Pushing the branch to remote repo"

show_msg ""
